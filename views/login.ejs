<main>
    <h1>Login criado com sucesso</h1>

    <form action="/autenticacao/login" method="post" class="login-form">
        <h1>Login</h1>
        <label for="username"><b>Usuário</b></label>
        <input type="text" placeholder="Digite seu nome de usuário" id="username" name="username" required>
        <label for="password"><b>Senha</b></label>
        <input type="password" placeholder="Digite sua senha" id="password" name="password" required>
        <button type="submit">Entrar</button>

    <h3><%= erro || '' %></h3>
    </form>
</main>


